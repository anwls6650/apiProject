<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.kmj.apiProject.auth.dao.mapper.AuthMapper">



	<select id="userDetail"
		parameterType="com.kmj.apiProject.auth.dto.AuthDto"
		resultType="com.kmj.apiProject.auth.dto.AuthDto">
		select *
		from users
		where id = #{id}
	</select>


	<insert id="signUp"
		parameterType="com.kmj.apiProject.auth.dto.AuthDto">
		insert
		into users
		(
		id
		,name
		,password
		,email
		,phone_num
		<if test="memo != null and !memo.equals('')">
		,memo
		</if>
		)
		values
		(
		#{id}
		,#{name}
		,#{password}
		,#{email}
		,#{phoneNum}
		<if test="memo != null and !memo.equals('')">
		,#{memo}
		</if>
		)
	</insert>

</mapper>