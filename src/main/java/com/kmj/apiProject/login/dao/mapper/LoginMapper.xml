<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper
	namespace="com.kmj.apiProject.login.dao.mapper.LoginMapper">

	<select id="userDetail"
		parameterType="com.kmj.apiProject.login.dto.LoginDto"
		resultType="com.kmj.apiProject.login.dto.LoginDto">
		select *
		from user
		where id = #{id}
	</select>


	<insert id="signUp"
		parameterType="com.kmj.apiProject.login.dto.LoginDto">
		insert
		into user
		(
		id
		,name
		,password
		,email
		,phone_num
		)
		values
		(
		#{id}
		,#{name}
		,#{password}
		,#{email}
		,#{phoneNum}
		)
	</insert>

</mapper>